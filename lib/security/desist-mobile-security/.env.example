# Environment Configuration for DESIST! Mobile Security
# Copy this file to .env and update with your actual values

# Expo Push Notifications
EXPO_PROJECT_ID=your-expo-project-id-here
EXPO_ACCESS_TOKEN=your-expo-access-token-here

# Firebase Cloud Messaging (for native Android)
FCM_SERVER_KEY=your-fcm-server-key-here
FCM_SENDER_ID=your-fcm-sender-id-here

# Apple Push Notification Service (for native iOS)
APNS_KEY_ID=your-apns-key-id-here
APNS_TEAM_ID=your-apple-team-id-here
APNS_BUNDLE_ID=com.desist.mobile
APNS_PRODUCTION=false

# Database Configuration
DATABASE_URL=your-database-connection-string
REDIS_URL=your-redis-connection-string

# API Configuration
API_BASE_URL=https://api.desist.app
API_VERSION=v1
JWT_SECRET=your-jwt-secret-key-here

# Security Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-here
SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_REGISTRATION_MAX=10

# Logging and Monitoring
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ENDPOINT=https://analytics.desist.app

# Compliance and Privacy
GDPR_RETENTION_DAYS=365
COMPLIANCE_WEBHOOK_URL=https://compliance.desist.app/webhook
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years

# Development/Testing
NODE_ENV=development
DEBUG=desist:*
