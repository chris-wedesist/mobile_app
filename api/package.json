{
  "name": "mobile-app-security-api",
  "version": "1.0.0",
  "description": "Security API server for mobile app with CAPTCHA verification and rate limiting",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "security-audit": "npm audit && snyk test",
    "deploy:staging": "npm run build && pm2 start ecosystem.config.js --env staging",
    "deploy:production": "npm run build && pm2 start ecosystem.config.js --env production"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2",
    "winston": "^3.11.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "snyk": "^1.1275.0",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "security",
    "captcha",
    "rate-limiting",
    "mobile-api",
    "express",
    "typescript"
  ],
  "author": "Desist Security Team",
  "license": "MIT"
}
