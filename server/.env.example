# DESIST Management Server Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# Database Configuration
DATABASE_PATH=./data/desist.db
DATABASE_URL=sqlite:./data/desist.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,exp://localhost:19000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Admin Dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# Device Management
MAX_DEVICES_PER_ACCOUNT=10
COMMAND_TIMEOUT_MS=300000
SYNC_INTERVAL_MS=900000

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
HASH_ROUNDS=12

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/socket.io

# Development Only - Remove in Production
DEBUG_MODE=true
MOCK_DATA_ENABLED=true
